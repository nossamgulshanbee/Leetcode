class Solution {
    public boolean isPowerOfThree(int n) {
        if(n==0)
        {
            return false;
        }
        else if(n<0)
        {
            return false;
        }
        else
        {
            for(int i=0;i<=100;i++)
            {
                double x=Math.pow(3,i);
                    if(x==n)
                    {
                        return true;
                    }
            }
        }
        return false;  
    }
}
